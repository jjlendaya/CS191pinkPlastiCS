    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mcgisimulations"
    tools:context=".MainActivity$PlaceholderFragment"
    android:layout_gravity="center"
    android:id="@+id/NodeLayout">

    <LinearLayout
        android:id="@+id/traversal_line_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/traversal_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_1l"
                android:src="@drawable/traversal_line_1l_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_1l_blank"
                android:src="@drawable/traversal_blank_l1"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/traversal_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_1l"
                android:src="@drawable/traversal_line_1r_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="19dp">

            <ImageView
                android:id="@+id/traversal_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_2l"
                android:src="@drawable/traversal_line_2l_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_2l_blank"
                android:src="@drawable/traversal_blank_l2a"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/traversal_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_2l"
                android:src="@drawable/traversal_line_2r_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="156dp"
                android:src="@drawable/traversal_blank_l2b"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/traversal_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_2l"
                android:src="@drawable/traversal_line_2r_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/traversal_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_3l"
                android:src="@drawable/traversal_line_3r_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="45dp"
                android:src="@drawable/traversal_blank_l3a"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/traversal_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_3l"
                android:src="@drawable/traversal_line_3l_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="20.25dp"
                android:src="@drawable/traversal_blank_l3gen"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/traversal_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_3l"
                android:src="@drawable/traversal_line_3r_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="135.5dp"
                android:src="@drawable/traversal_blank_l3b"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/traversal_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_3l"
                android:src="@drawable/traversal_line_3l_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/traversal_node_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/traversal_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_node_visited"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/traversal_A_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:textSize="15dp"
                android:textColor="@color/traversal_gray"/>

        </FrameLayout>


        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_B_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_C_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_D_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_E_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_F_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="29dp"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_G_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_H_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_I_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="45dp"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/traversal_J"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/traversal_node"
                    android:src="@drawable/traversal_node_visited"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/traversal_J_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textSize="15dp"
                    android:textColor="@color/traversal_gray"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/traversal_node"
                android:src="@drawable/traversal_blank_node"
                android:adjustViewBounds="true"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/traversal_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/traversal_play"
        android:maxWidth="@dimen/traversal_play_pause"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/traversal_tapscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="@dimen/tap_reminder_text_size"
        android:text="@string/tap_play_reminder"/>

    <TextView
        android:id="@+id/traversal_found_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="Found:  "
        android:textSize="20dp"
        android:layout_marginTop="230dp" />

</FrameLayout>